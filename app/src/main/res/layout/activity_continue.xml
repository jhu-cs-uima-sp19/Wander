<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ContinueActivity">

    <Button
        android:id="@+id/continue"
        android:layout_width="139dp"
        android:layout_height="44dp"
        android:layout_marginBottom="140dp"
        android:background="#6EA862"
        android:fontFamily="@font/roboto"
        android:text="Continue"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/new_game"
        android:layout_width="139dp"
        android:layout_height="44dp"
        android:layout_marginBottom="64dp"
        android:background="#6EA862"
        android:fontFamily="@font/roboto"
        android:text="New Game"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/map_final"
        android:layout_width="200dp"
        android:layout_height="209dp"
        app:layout_constraintBottom_toTopOf="@+id/new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67"
        app:srcCompat="@drawable/map_logo_black" />
</androidx.constraintlayout.widget.ConstraintLayout>