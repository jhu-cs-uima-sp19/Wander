<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObjectiveDetail">

    <ImageView
        android:id="@+id/where_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/where_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/where_image"
        android:layout_marginBottom="30dp"
        android:text="Location"
        style="@style/Base.TextAppearance.AppCompat.Large"
        />

    <TextView
        android:id="@+id/when_text"
        android:text="DateFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/where_text"
        android:layout_marginBottom="30dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        />

    <!--<TextView
        android:id="@+id/who_text"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/when_text"
        android:layout_marginBottom="30dp"
        android:text="Placeholder"
        />

    <TextView
        android:id="@+id/serv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/who_text"
        android:text="PlaceHolder"
        style="@style/Base.TextAppearance.AppCompat.Large"
        />-->

    <TextView
        android:id="@+id/total_text"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/when_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>