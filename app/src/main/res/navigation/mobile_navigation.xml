<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.wander.MainActivity"
        android:label="@string/title_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.wander.CurrentObjectiveActivity"
        android:label="@string/title_current_objective"
        tools:layout="@layout/activity_current_objective" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.wander.ObjectivesList"
        android:label="@string/title_objectives"
        tools:layout="@layout/activity_objectives" />
</navigation>